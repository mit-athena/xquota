LIBDIR= /usr/lib/X11/app-defaults

HELPFILES= -DDEFAULTS_FILE=\"${LIBDIR}/Xquota.ad\"\
	   -DTOP_HELP_FILE=\"${LIBDIR}/top_help.txt\"\
	   -DPOPUP_HELP_FILE=\"${LIBDIR}/pop_help.txt\"

DEFINES= -O ${INCFLAGS} ${HELPFILES}
INCFLAGS= -I.
LIBS= -lXaw -lXt -lXmu -lX11 -lhesiod -lrpcsvc

SRCS=handler.c main.c quota.c widgets.c
OBJS=handler.o main.o quota.o widgets.o

CFILES=handler.c main.c quota.c widgets.c

#if (defined(vax) && !defined(ultrix)) || defined(ibm032)
SimpleProgram(xquota,${OBJS},${LIBS},$(ATHBINDIR))
		cc ${CFLAGS} ${LDFLAGS}  -o xquota ${LIBS}

install_file(Xquota.ad,${LIBDIR})
install_file(top_help.txt,${LIBDIR})
install_file(pop_help.txt,${LIBDIR})
#else
all::
	@echo xquota does not compile on this platform
#endif
