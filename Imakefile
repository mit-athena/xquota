#if (defined(vax) && !defined(ultrix)) || defined(ibm032)
INCFLAGS= -I. -I/usr/local/include
LIBS= -lXaw -lXt -lXmu -lX11 -lhesiod -lrpcsvc /usr/local/lib/afs/libsys.a

HELPFILES= -DDEFAULTS_FILE=\"${XAPPDEFDIR}/Xquota.ad\"\
	   -DTOP_HELP_FILE=\"${XAPPDEFDIR}/top_help.txt\"\
	   -DPOPUP_HELP_FILE=\"${XAPPDEFDIR}/pop_help.txt\"

DEFINES= ${INCFLAGS} ${HELPFILES}

OBJS=handler.o main.o quota.o widgets.o afsquota.o

SimpleProgram(xquota,${OBJS},${LIBS},$(ATHBINDIR))
		cc ${CFLAGS} ${LDFLAGS}  -o xquota ${LIBS}

install_file(Xquota.ad,${XAPPDEFDIR})
install_file(top_help.txt,${XAPPDEFDIR})
install_file(pop_help.txt,${XAPPDEFDIR})

#else
all::
	@echo xquota does not compile on this platform
#endif
